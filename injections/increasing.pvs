increasing: theory
begin

  increasing?(m, n: nat)(f: [below[m] -> below[n]]): bool =
    forall(i, j: below[m]):
      i < j implies f(i) < f(j)

  increasing_rew: lemma
    forall(m, n: nat, f: (increasing?(m, n)), i, j: below[m]):
      f(i) < f(j) iff i < j

  auto_rewrite+ increasing_rew

end increasing
